---
import { SITE, SITE_ORIGIN } from '../config/site';
import type { StructuredData } from '../lib/seo';
import { defaultOgImage } from '../lib/seo';

interface AlternateLink {
  href: string;
  hrefLang: string;
}

interface Props {
  title: string;
  description: string;
  canonical: string;
  lang?: 'es' | 'en';
  ogImage?: string;
  noindex?: boolean;
  alternates?: AlternateLink[];
  structuredData?: StructuredData[];
}

const {
  title,
  description,
  canonical,
  lang = 'es',
  ogImage = defaultOgImage,
  noindex = false,
  alternates = [],
  structuredData = []
} = Astro.props;

const ogUrl = ogImage.startsWith('http') ? ogImage : new URL(ogImage, SITE_ORIGIN).toString();
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>{title}</title>
<meta name="description" content={description} />
<meta name="generator" content={Astro.generator} />
<link rel="icon" type="image/svg+xml" href="/favicon.png" />
<link rel="icon" type="image/png" href="/images/logo.png" />
<link rel="apple-touch-icon" href="/images/logo.png" />
<link rel="canonical" href={canonical} />
<meta name="robots" content={noindex ? 'noindex, nofollow' : 'index, follow'} />
{alternates.map((link) => (
  <link rel="alternate" hreflang={link.hrefLang} href={link.href} />
))}
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={canonical} />
<meta property="og:type" content="website" />
<meta property="og:image" content={ogUrl} />
<meta property="og:site_name" content={SITE.title} />
<meta property="og:locale" content={lang === 'es' ? 'es_ES' : 'en_US'} />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogUrl} />
<meta name="theme-color" content="#0f1116" />
{structuredData.map((entry) => (
  <script type="application/ld+json" set:html={JSON.stringify(entry)} />
))}
